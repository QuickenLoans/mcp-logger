{
    "name": "ql/mcp-logger",
    "description": "Structured logging for Quicken Loans PHP projects",

    "type": "library",
    "keywords": [ "mcp", "quickenloans" ],
    "license": "MIT",
    "authors": [
        { "name": "Steve Kluck", "email": "steve@kluck.engineering" }
    ],

    "autoload": {
        "psr-4": { "QL\\MCP\\Logger\\": "src" }
    },

    "require": {
        "php": "~7.0",

        "ql/mcp-common": "^1.1.0",
        "psr/log":       "*"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "~5.3.1",
        "mockery/mockery":   "~0.9",
        "phpunit/phpunit":   "~6.2",

        "overtrue/phplint":          "~1.0",
        "phpstan/phpstan":           "~0.9",
        "squizlabs/php_codesniffer": "~3.0",

        "symfony/config":               "~3.3",
        "symfony/dependency-injection": "~3.3",
        "symfony/yaml":                 "~3.3"
    },
    "suggest": {
        "guzzlehttp/guzzle": "Required when using the Guzzle logger service."
    }
}
