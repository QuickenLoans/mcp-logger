        "phpstan/phpstan":           "~0.9",
        "squizlabs/php_codesniffer": "~3.0",

        "psr/http-message":             "~1.0",
        "symfony/config":               "~4.0",
        "symfony/dependency-injection": "~4.0",
        "symfony/yaml":                 "~4.0"
